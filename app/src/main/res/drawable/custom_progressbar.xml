<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="2dp"/>
            <solid android:color="@color/grey_bar" />
        </shape>
    </item>
    <item android:id="@android:id/background"  android:top="1dp" android:bottom="1dp" android:right="1dp" android:left="1dp">
        <shape>
            <corners android:radius="2dp"/>
            <gradient
                android:startColor="@color/grey_bar"
                android:centerColor="@color/grey_bar"
                android:centerY="1.0"
                android:endColor="@color/grey_bar"
                android:angle="270"
                />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress"  android:top="1dp" android:bottom="1dp" android:right="1dp" android:left="1dp">
        <clip>
            <shape>
                <corners android:radius="2dp"/>
                <gradient
                    android:startColor="@color/red_bar"
                    android:centerColor="@color/red_bar"
                    android:centerY="1.0"
                    android:endColor="@color/red_bar"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>