                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    />
                <View
                    android:layout_width="420dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center"
                    android:background="@drawable/blue_line"
                    android:layout_marginTop="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    >
                    <Button
                        android:id="@+id/easy2"
                        android:layout_width="142dp"
                        android:layout_height="52dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/easy"
                        android:textColor="@color/white"
                        android:background="@drawable/button_ranking_green"
                        android:textStyle="bold"
                        android:textSize="21sp"
                        style="@style/Widget.AppCompat.ButtonBar"

                        />

                    <Button
                        android:id="@+id/medium2"
                        android:layout_width="142dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/button_ranking_green"
                        android:text="@string/medium"
                        android:textColor="@color/white"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        style="@style/Widget.AppCompat.ButtonBar"
                        />

                    <Button
                        android:id="@+id/hard2"
                        android:layout_width="142dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/button_ranking_green"
                        android:text="@string/hard"
                        android:textColor="@color/white"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        style="@style/Widget.AppCompat.ButtonBar"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_difficulty_focused"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/game3_title"
                    android:textColor="@color/blue_play"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    />
                <View
                    android:layout_width="420dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center"
                    android:background="@drawable/blue_line"
                    android:layout_marginTop="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
