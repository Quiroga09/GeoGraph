<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.twentyfourkapps.geograph.MainActivity"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:paddingBottom="30dp"
    android:background="@color/blue_diff_alpha"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scores_back"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/back_arrow"
        android:onClick="home_pressed"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:scaleX="1.5"
        android:scaleY="1.5"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:id="@+id/scores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/score"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_gravity="center_vertical"
            android:drawablePadding="15dp"
            android:drawableLeft="@drawable/ranking_icon"
            android:drawableStart="@drawable/ranking_icon"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_difficulty_focused"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/game1_title"
                    android:textSize="24sp"
                    android:textColor="@color/blue_play"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    />
                <View
                    android:layout_width="420dp"
                    android:layout_height="4dp"
                    android:layout_gravity="center"
                    android:background="@drawable/blue_line"
                    android:layout_marginTop="15dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    >
                    <Button
                        android:id="@+id/easy1"
                        android:layout_width="142dp"
                        android:layout_height="52dp"
                        android:layout_gravity="center_vertical"
                        android:text="@string/easy"
                        android:textColor="@color/white"
                        android:background="@drawable/button_ranking_green"
                        android:textStyle="bold"
                        android:textSize="21sp"
                        style="@style/Widget.AppCompat.ButtonBar"

                        />

                    <Button
                        android:id="@+id/medium1"
                        android:layout_width="142dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/button_ranking_green"
                        android:text="@string/medium"
                        android:textColor="@color/white"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        style="@style/Widget.AppCompat.ButtonBar"


                        />

                    <Button
                        android:id="@+id/hard1"
                        android:layout_width="142dp"
                        android:layout_height="52dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginStart="15dp"
                        android:background="@drawable/button_ranking_green"
                        android:text="@string/hard"
                        android:textColor="@color/white"
                        android:textSize="21sp"
                        android:textStyle="bold"
                        style="@style/Widget.AppCompat.ButtonBar"

                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/button_difficulty_focused"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
