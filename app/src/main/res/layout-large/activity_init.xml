<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_init"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:keepScreenOn="true"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_prehome"
        android:scaleType="fitXY"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/white_sign_in"
        android:alpha="0.9"
        >
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/button_sign_in"
            android:text="@string/sign_in"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/bitmap"
            android:drawableStart="@drawable/bitmap"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center"
            android:textSize="27sp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"

            />
        <TextView
            android:id="@+id/no_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_login"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="23dp"
            android:clickable="true"
            android:focusable="true"
            android:textSize="20sp"
            />
    </LinearLayout>



</RelativeLayout>


